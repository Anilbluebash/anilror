

<h1 style="text-align: center; color: green">Listing articles</h1>
<p style="text-align: center;"><%= link_to 'New article', new_article_path %></p>
 
 <div style="border: solid; width: 500px; padding: 10px; text-align: center;">
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= time_date(article.created_at) %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %> </td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
<%= link_to 'New article', new_article_path %>
